<form>
  <h2>{{localize "SPACEHOLDER.TokenPointer.Settings.Title"}}</h2>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.Color"}}</label>
    <input type="color" name="tokenpointer.color" value="{{color}}" />
  </div>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.Distance"}}</label>
    <input type="number" name="tokenpointer.distance" value="{{distance}}" step="0.05" />
  </div>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.Scale"}}</label>
    <input type="number" name="tokenpointer.scale" value="{{scale}}" step="0.05" />
  </div>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.Mode"}}</label>
    <select name="tokenpointer.mode">
      <option value="0" {{#if (eq mode 0)}}selected{{/if}}>{{localize "SPACEHOLDER.TokenPointer.Mode.Off"}}</option>
      <option value="1" {{#if (eq mode 1)}}selected{{/if}}>{{localize "SPACEHOLDER.TokenPointer.Mode.Hover"}}</option>
      <option value="2" {{#if (eq mode 2)}}selected{{/if}}>{{localize "SPACEHOLDER.TokenPointer.Mode.Always"}}</option>
    </select>
  </div>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.CombatOnly"}}</label>
    <input type="checkbox" name="tokenpointer.combatOnly" {{#if combatOnly}}checked{{/if}} />
  </div>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.HideOnDead"}}</label>
    <input type="checkbox" name="tokenpointer.hideOnDead" {{#if hideOnDead}}checked{{/if}} />
  </div>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.LockToGrid"}}</label>
    <input type="checkbox" name="tokenpointer.lockToGrid" {{#if lockToGrid}}checked{{/if}} />
  </div>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.FlipHorizontal"}}</label>
    <input type="checkbox" name="tokenpointer.flipHorizontal" {{#if flipHorizontal}}checked{{/if}} />
  </div>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.UnderToken"}}</label>
    <input type="checkbox" name="tokenpointer.underToken" {{#if underToken}}checked{{/if}} />
  </div>
  <div class="form-group">
    <label>{{localize "SPACEHOLDER.TokenPointer.Settings.PointerType"}}</label>
    <select name="tokenpointer.pointerType">
      <option value="arrow" {{#if (eq pointerType 'arrow')}}selected{{/if}}>{{localize "SPACEHOLDER.TokenPointer.PointerType.Arrow"}}</option>
      <option value="line" {{#if (eq pointerType 'line')}}selected{{/if}}>{{localize "SPACEHOLDER.TokenPointer.PointerType.Line"}}</option>
      <option value="marker" {{#if (eq pointerType 'marker')}}selected{{/if}}>{{localize "SPACEHOLDER.TokenPointer.PointerType.Marker"}}</option>
      <option value="markerV2" {{#if (eq pointerType 'markerV2')}}selected{{/if}}>{{localize "SPACEHOLDER.TokenPointer.PointerType.MarkerV2"}}</option>
    </select>
  </div>
  <footer class="sheet-footer flexrow">
    <button type="submit" class="button">{{localize "SPACEHOLDER.Actions.Save"}}</button>
  </footer>
</form>
