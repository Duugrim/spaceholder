<div class="form-group spaceholder-user-factions">
  <label aria-hidden="true"></label>
  <div class="form-fields" style="flex-direction: column; align-items: stretch; gap: 6px;">

    <div class="flexrow" style="align-items: center; gap: 6px;">
      <select data-field="spaceholderFactionSelect" style="min-width: 0;">
        <option value="">—</option>
        {{#each factionChoices as |f|}}
          <option value="{{f.uuid}}">{{f.name}}</option>
        {{/each}}
      </select>

      <button
        type="button"
        class="icon-btn"
        data-action="spaceholder-user-factions-add"
        aria-label="{{localize \"SPACEHOLDER.UserFactions.Buttons.Add\"}}"
        data-tooltip="{{localize \"SPACEHOLDER.UserFactions.Buttons.Add\"}}"
      ><i class="fa-solid fa-plus" aria-hidden="true"></i></button>

      <button
        type="button"
        class="icon-btn"
        data-action="spaceholder-user-factions-clear"
        aria-label="{{localize \"SPACEHOLDER.UserFactions.Buttons.Clear\"}}"
        data-tooltip="{{localize \"SPACEHOLDER.UserFactions.Buttons.Clear\"}}"
      ><i class="fa-solid fa-trash-can" aria-hidden="true"></i></button>
    </div>

    <div data-field="spaceholderFactionList" style="display: flex; flex-direction: column; gap: 4px;"></div>

    {{!-- Хранение: flags.spaceholder.factions (UUID актёров типа faction, 1 UUID на строку) --}}
    <textarea name="flags.spaceholder.factions" hidden>{{factionsText}}</textarea>
  </div>
</div>
