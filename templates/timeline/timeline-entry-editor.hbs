<div class="sh-tle">
  <header class="sh-tle__header">
    <div class="sh-tle__row sh-tle__row--main">
      <div class="form-group sh-tle__fg sh-tle__fg--year">
        <label>{{localize "SPACEHOLDER.Timeline.Fields.Year"}}</label>
        <div class="form-fields">
          <input
            type="number"
            name="year"
            value="{{year}}"
            min="1"
            step="1"
            inputmode="numeric"
            data-field="timelineYear"
          />
        </div>
      </div>

      <div class="form-group sh-tle__fg sh-tle__fg--title">
        <label>{{localize "SPACEHOLDER.Timeline.Fields.Title"}}</label>
        <div class="form-fields">
          <input
            type="text"
            name="title"
            value="{{title}}"
            required
            spellcheck="true"
            placeholder=""
          />
        </div>
      </div>
    </div>

    <div class="sh-tle__row sh-tle__row--meta">
      {{#if showOriginSelect}}
        <div class="form-group sh-tle__fg sh-tle__fg--origin">
          <label>{{localize "SPACEHOLDER.Timeline.Fields.Origin"}}</label>
          <div class="form-fields">
            <select name="origin" data-action="origin-change">
              <option value="faction" {{#if (eq origin 'faction')}}selected{{/if}}>{{localize "SPACEHOLDER.Timeline.Origin.Faction"}}</option>
              <option value="world" {{#if (eq origin 'world')}}selected{{/if}}>{{localize "SPACEHOLDER.Timeline.Origin.World"}}</option>
            </select>
          </div>
        </div>
      {{/if}}

      {{#if showFactionSelect}}
        <div class="form-group sh-tle__fg sh-tle__fg--faction">
          <label>{{localize "SPACEHOLDER.Timeline.Fields.Faction"}}</label>
          <div class="form-fields">
            <select name="factionUuid">
              {{#if allowNoFaction}}
                <option value="" {{#if (eq @root.factionUuid '')}}selected{{/if}}>(без фракции)</option>
              {{/if}}
              {{#each factions as |f|}}
                <option value="{{f.uuid}}" {{#if (eq f.uuid @root.factionUuid)}}selected{{/if}}>{{f.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
      {{/if}}

      {{#if showGlobalToggle}}
        <div class="form-group sh-tle__fg sh-tle__fg--global">
          <label></label>
          <div class="form-fields">
            <label class="checkbox sh-tle__checkbox">
              <input type="checkbox" name="isGlobal" {{#if isGlobal}}checked{{/if}} />
              <span>{{localize "SPACEHOLDER.Timeline.Fields.Global"}}</span>
            </label>
          </div>
        </div>
      {{/if}}
    </div>
  </header>

  <section class="sh-tle__body">
    <prose-mirror
      class="sh-tle__pm"
      name="content"
      value="{{content}}"
      toggled
      {{#if documentUuid}}data-document-uuid="{{documentUuid}}"{{/if}}
    >
      {{{enrichedContent}}}
    </prose-mirror>
  </section>

  <footer class="sh-tle__footer">
    <button type="submit" class="primary sh-tle__save">
      <i class="fa-solid fa-check" aria-hidden="true"></i>
      {{localize "SPACEHOLDER.Timeline.Buttons.Save"}}
    </button>
    <button type="button" class="sh-tle__cancel" data-action="cancel">
      <i class="fa-solid fa-xmark" aria-hidden="true"></i>
      {{localize "SPACEHOLDER.Timeline.Buttons.Cancel"}}
    </button>
  </footer>
</div>
