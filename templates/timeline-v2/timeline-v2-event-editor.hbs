<div class="sh-tl2e">
  <header class="sh-tl2e__header">
    <div class="sh-tl2e__row sh-tl2e__row--main">
      <div class="form-group sh-tl2e__fg sh-tl2e__fg--date">
        <label>{{localize "SPACEHOLDER.TimelineV2.Fields.Date"}}</label>
        <div class="form-fields sh-tl2e__dateFields">
          <input type="number" name="year" value="{{year}}" step="1" inputmode="numeric" class="sh-tl2e__year" />
          <input type="number" name="month" value="{{month}}" min="1" max="12" step="1" inputmode="numeric" class="sh-tl2e__month" />
          <input type="number" name="day" value="{{day}}" min="1" max="30" step="1" inputmode="numeric" class="sh-tl2e__day" />
          <button
            type="button"
            class="sh-tl2e__datePickBtn"
            data-action="pick-date"
            aria-label="{{localize "SPACEHOLDER.TimelineV2.Buttons.PickDate"}}"
            data-tooltip="{{localize "SPACEHOLDER.TimelineV2.Buttons.PickDate"}}"
          ><i class="fa-solid fa-calendar-days" aria-hidden="true"></i></button>
        </div>
      </div>

      <div class="form-group sh-tl2e__fg sh-tl2e__fg--title">
        <label>{{localize "SPACEHOLDER.TimelineV2.Fields.Title"}}</label>
        <div class="form-fields">
          <input type="text" name="title" value="{{title}}" required spellcheck="true" />
        </div>
      </div>
    </div>

    <div class="sh-tl2e__row sh-tl2e__row--meta">
      {{#if showFactionSelect}}
        <div class="form-group sh-tl2e__fg sh-tl2e__fg--faction">
          <label>{{localize "SPACEHOLDER.TimelineV2.Fields.Faction"}}</label>
          <div class="form-fields">
            <select name="factionUuid" data-action="faction-change">
              {{#if allowNoFaction}}
                <option value="" {{#if (eq @root.factionUuid '')}}selected{{/if}}>(world)</option>
              {{/if}}
              {{#each factions as |f|}}
                <option value="{{f.uuid}}" {{#if (eq f.uuid @root.factionUuid)}}selected{{/if}}>{{f.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
      {{/if}}

      {{#if showGlobalToggle}}
        <div class="form-group sh-tl2e__fg sh-tl2e__fg--global">
          <label></label>
          <div class="form-fields">
            <label class="checkbox sh-tl2e__checkbox">
              <input type="checkbox" name="isGlobal" {{#if isGlobal}}checked{{/if}} />
              <span>{{localize "SPACEHOLDER.TimelineV2.Fields.Global"}}</span>
            </label>
          </div>
        </div>
      {{/if}}
    </div>
  </header>

  <section class="sh-tl2e__body">
    <div class="form-group sh-tl2e__fg sh-tl2e__fg--content">
      <label>{{localize "SPACEHOLDER.TimelineV2.Fields.Content"}}</label>
      <div class="form-fields">
        <textarea name="content" rows="10">{{content}}</textarea>
      </div>
    </div>
  </section>

  <footer class="sh-tl2e__footer">
    <button type="submit" class="primary sh-tl2e__save">
      <i class="fa-solid fa-check" aria-hidden="true"></i>
      {{localize "SPACEHOLDER.TimelineV2.Buttons.Save"}}
    </button>
    <button type="button" class="sh-tl2e__cancel" data-action="cancel">
      <i class="fa-solid fa-xmark" aria-hidden="true"></i>
      {{localize "SPACEHOLDER.TimelineV2.Buttons.Cancel"}}
    </button>
  </footer>
</div>
